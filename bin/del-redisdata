#!/bin/bash
#
# A lancer de la racine du projet.
# Petit script ayant pour but d'effacer les donnÃ©es de moodle.
#

readonly FUNCTIONS_FILE="./bin/functions.inc.sh"

if [[ ! -f "${FUNCTIONS_FILE}" ]] ; then
    echo "Le fichier ${FUNCTIONS_FILE} n'existe pas." >&2
    exit 1
fi

# shellcheck source=./bin/functions.inc.sh
source "${FUNCTIONS_FILE}"

main() {
  delete_directory_content_and_add_gitignore "./docker/redis/data1"
  delete_directory_content_and_add_gitignore "./docker/redis/data2"
  echo "Del redis data : ${GREEN}Ok${RESET}"
}

main "$@"